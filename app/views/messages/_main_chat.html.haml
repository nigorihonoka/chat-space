.info
  .leftbox
    .current-group
      .current-group__name
        = @group.name
      %ul.current-group__member-list
        Member :
        - @group.users.each do |user|
          %li.current-group__member-list__member
            = user.name
  = link_to edit_group_path(@group), class:"rightbox" do
    edit
.main
  = render @messages
= form_with model: [@group, @message], html: {class: "Form"}, local: true do |form|
  .form
    .new-message
      = form.text_area :content, placeholder: "type a message", class: "new-message__text"
      = form.label :image, class:"new-message__image" do
        = icon( "far", "image", class:"new-message__image--icon")
        = form.file_field :image, class: "new-message__image--file"
    = form.submit "Send", class: "send"
